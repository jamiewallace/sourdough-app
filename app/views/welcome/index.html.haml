/ - content_for :stylesheets do
:css
  body {
    background: url('/assets/homeimage2.jpg');
    background-size: cover;
  }  


.row
  .col-md-5.welcome-h1-text
    %h1 Find, or share, some sourdough starter in your hood
  .col-md-3.welcome-search-box
    %h1 I've got dough
    %p Share your sourdough starter and help others become successful bakers
    = form_tag search_users_path, method: :post do
      .inner-row
        = text_field_tag :address
        = hidden_field_tag :type, 'need'
        = submit_tag :Search
.row
  .col-md-3.welcome-search-box
    %h1 I knead some dough
    %p Find a sourdough starter and learn how to make high quality low cost bread
    = form_tag search_users_path, method: :post do
      .inner-row
        = text_field_tag :address
        = hidden_field_tag :type, 'have'
        = submit_tag :Search
